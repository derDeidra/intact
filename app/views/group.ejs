<html lang="en" ng-app="intact">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Intact Insider</title>

    <% include templates/common_depends.ejs %>

    <!-- Custom styles for this template -->
    <link href="/css/group.css" rel="stylesheet">

    <script type="text/javascript" src="/js/group.js"></script>

<body ng-controller="group-page-body">

<% include templates/navbar.ejs %>

<div class="container">

    <div class="blog-header">
        <h1 class="blog-title">Insider News Feed</h1>
        <p class="lead blog-description">This is what is happening around Intact...</p>
    </div>

    <div class="row">
        <div ng-if="posts.length > 0">
            <div class="col-md-8 blog-main" ng-repeat="post in posts">
                <div class="newsFeed">
                    <a href="/g/{{groupName}}/p/{{post._id}}">
                        <div class="feeds">
                            <p><b><h3>{{post.title}}</h3></b></p>
                            <p>{{formatInterval(post.createdAt)}}, {{post.comments.length}} comments</p>
                        </div>
                    </a>
                </div>
            </div><!-- /.blog-main -->
        </div>
        <div ng-if="posts.length == 0">
            <div class="col-md-8 blog-main">
                <div class="newsFeed">
                    <div class="feeds">
                        <p><b><h3>No Posts!</h3></b></p>
                        <p>There aren't any posts here</p>
                    </div>
                </div>
            </div><!-- /.blog-main -->
        </div>

        <div class="col-md-3 col-md-offset-1 blog-sidebar">
            <div class="btn-group-vertical sidebar-module">
                <a ng-href="/g/{{groupName}}/post" class="btn btn-default btn-lg"><h2>Create Post</h2></a>
                <a href="/createGroup" class="btn btn-default btn-lg"><h2>Create Group</h2></a>
                <p></p>
            </div>
            <div class="sidebar-module2">
                <h2>My Groups</h2>
                <ol class="list-unstyled">
                    <li ng-repeat="group in groups">
                        <a ng-href="/g/{{group.name}}">
                            <h4>&emsp;- {{group.name}} <span ng-if="group.name == groupName">*</span>&emsp;{{group.members.length}}
                                Members</h4>
                        </a>
                    </li>
                </ol>
            </div>
        </div><!-- /.blog-sidebar -->
    </div><!-- /.row -->
</div><!-- /.container -->
</body>
</html>