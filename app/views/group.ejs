<html lang="en" ng-app="intact">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Intact Insider</title>

    <% include templates/angular_priority_depends.ejs %>
    <script type="text/javascript" src="/js/group.js"></script>

    <% include templates/common_depends.ejs %>

    <!-- Custom styles for this template -->
    <link href="/css/group.css" rel="stylesheet">

<body ng-controller="group-page-body">

<% include templates/navbar.ejs %>

    <div class="container">
        <div>
            <div class="col-md-8" ng-if="posts.length > 0">
                <div class="panel panel-default" ng-repeat="post in posts">
                    <div class="panel-heading">
                        <h3 class="panel-title"><a href="/g/{{groupName}}/p/{{post._id}}">{{post.title}}</a></h3>
                    </div>
                    <div class="panel-body">
                        Posted by {{post.poster.name}} {{formatInterval(post.createdAt)}}, {{post.comments.length}} comments
                    </div>
                </div>
            </div>
            <div class="col-md-8" ng-if="posts.length == 0">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">No Posts!</h3>
                    </div>
                    <div class="panel-body">
                        There are no posts in this group!
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Actions</div>
                    <div class="panel-body">
                        <div>
                            <h2>g/{{groupName}}</h2>
                            <p>{{groupDesc}}</p>
                        </div>
                        <div class="list-group">
                            <a ng-href="/g/{{groupName}}/post" class="list-group-item align-center"><h3>Create Post</h3></a>
                            <a ng-if="owner === userId" ng-href="/g/{{groupName}}/edit" class="list-group-item align-center"><h3>Edit Group</h3></a>
                            <a href="#" class="list-group-item align-center" ng-click="leaveGroup()"><h3>Leave Group</h3></a>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">My Groups</h3>
                    </div>
                    <div class="panel-body">
                        <div class="list-group">
                            <a ng-repeat="group in groups" ng-href="/g/{{group.name}}" class="list-group-item">
                                    <h4>{{group.name}} <span ng-if="group.name == groupName">*</span>&emsp;{{group.members.length}}
                                        Members
                                    </h4>
                            </a>
                        </div>
                    </div>
                </div>
            </div><!-- /.blog-sidebar -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</body>
</html>